<h1>Material Inventory</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Quantity</th>
    <th>Unit</th>
  </tr>

  <% @materials.each do |material| %>
    <tr>
      <td><%= material.name %></td>
      <td><%= material.quantity %></td>
      <td><%= material.unit %></td>
      <td><%= link_to 'Edit', edit_material_path(id: material.id) %></td>
      <td><%= link_to 'Delete', material_path(id: material.id), method: :delete %></td>
    </tr>
  <% end %>
  
</table>

<%= link_to 'Add material', new_material_path %>
